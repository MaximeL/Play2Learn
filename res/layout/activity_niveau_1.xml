<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/background_wood_vierge"
        >

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="50dp">
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_gravity="right" android:layout_weight="5">
                <LinearLayout
                        android:layout_weight="33"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal" android:baselineAligned="false">

                        <LinearLayout
                                android:layout_weight="33"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:orientation="vertical">
                                <ImageButton
                                        android:id="@+id/image_top_1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/fleur_256_256"
                                        android:layout_gravity="center"/>
                        </LinearLayout>

                        <LinearLayout
                                android:layout_weight="33"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:orientation="vertical">
                                <ImageButton
                                        android:id="@+id/image_top_2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/fleur_256_256"
                                        android:layout_gravity="center"/>
                        </LinearLayout>

                        <LinearLayout
                                android:layout_weight="33"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:orientation="vertical">
                                <ImageButton
                                        android:id="@+id/image_top_3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/fleur_256_256"
                                        android:layout_gravity="center"/>
                        </LinearLayout>
                </LinearLayout>
                <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="33">
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent" android:gravity="center_vertical|center_horizontal">
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="?android:attr/textAppearanceLarge"
                                        android:text="Fourmis"
                                        android:textSize = "100sp"
                                        android:id="@+id/textView" android:layout_gravity="center"
                                        />
                        </LinearLayout>
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent">
                                <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent" android:layout_weight="50"
                                        android:gravity="center">
                                        <ImageView
                                                android:id="@+id/image_non"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:background="@drawable/non_256_256"
                                                />
                                </LinearLayout>
                                <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="50"
                                        android:gravity="center">
                                        <ImageView
                                                android:id="@+id/image_oui"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:background="@drawable/oui_256_256"
                                                />
                                </LinearLayout>
                        </LinearLayout>
                </FrameLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="33">
                        <!--android:background="#00ff00"-->

                        <ImageButton
                                android:id="@+id/image_bot_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/fleur_256_256"
                                android:layout_gravity="center"/>

                </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="50dp">
        </LinearLayout>

</LinearLayout>

